<Window x:Class="MafiaManager.PlayerInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MafiaManager"
        mc:Ignorable="d"
        Title="PlayerInfoWindow" Height="300" Width="350">
    <Grid>
        <TextBox Name="textBox" HorizontalAlignment="Center" Margin="0,-100,0,0" Text="Enter Player Name Here" VerticalAlignment="Center" Width="180" GotKeyboardFocus="clicked" Height="35" FontSize="14" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Content="Continue" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Click="closewindow" Height="35" Width="120" FontSize="14"/>
    </Grid>
</Window>
