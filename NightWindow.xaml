<Window x:Class="MafiaManager.NightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MafiaManager"
        mc:Ignorable="d"
        Title="NightWindow" Height="450" Width="680">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/night3.png"/>
        </Grid.Background>
        <Label x:Name="informant" Foreground="White" Content="Message for: PLAYER_NAME" HorizontalAlignment="Left" Height="45" Margin="205,169,0,0" VerticalAlignment="Top" Width="260" HorizontalContentAlignment="Center" Background="#FF242424" FontSize="14" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <Button Content="Show Message" HorizontalAlignment="Left" Margin="275,274,0,0" VerticalAlignment="Top" Click="OnButtonClick" Height="35" Width="120" FontSize="14" Background="#FF242424" Foreground="White" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
